# App Configuration
VITE_APP_NAME="Evidența Cheltuielilor"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Aplicație pentru evidența cheltuielilor lunare cu rapoarte avansate"

# Development
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost

# Build Configuration
VITE_BUILD_SOURCEMAP=true

# Features Flags
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Storage Configuration
VITE_STORAGE_KEY="evidenta-cheltuieli-data"
VITE_AUTO_BACKUP=true
VITE_MAX_BACKUP_SIZE=10485760

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_COMPACT_MODE=false